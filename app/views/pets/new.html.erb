<h2>Add a New Pet:</h2>
<section class="form">
  <%= form_tag("/shelters/#{@shelter_id}/pets", method: "post") do %>
    <%= label_tag(:image, "Image: ") %>
    <%= text_field_tag(:image) %><br />
    <%= label_tag(:name, "Name: ") %>
    <%= text_field_tag(:name) %><br />
    <%= label_tag(:description, "Description: ") %>
    <%= text_field_tag(:description) %><br />
    <%= label_tag(:approximate_age, "Approximate Age: ") %>
    <%= text_field_tag(:approximate_age) %><br />
    <%= label_tag(:sex, "Sex: ") %>
    <%= text_field_tag(:sex) %><br />
    <%= submit_tag("Create Pet") %>
  <% end %>
</section>
